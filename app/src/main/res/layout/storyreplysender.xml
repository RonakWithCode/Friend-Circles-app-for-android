<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:background="@color/StoryChat_Color_green"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/_180sdp"
        android:minWidth="120dp"

        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:background="@color/StoryChat_Color_green"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_Cavar"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:background="@drawable/contact"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/time_of_Sand_Story"
                android:textColor="@color/FixColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/image_Cavar" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/layout1"
        android:minWidth="120dp"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:background="@color/Chat_Color_green"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:maxWidth="200dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
